{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "atom-browser",
  "version": "0.1.0",
  "identifier": "com.atom.browser",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Atom Browser",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "transparent": false,
        "backgroundColor": [0, 0, 0, 255]
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}