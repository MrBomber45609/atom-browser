{
  "name": "atom-browser-reparado",
  "private": true,
  "version": "0.1.0",
  "main": "src/main-process.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.34.0",
    "cross-fetch": "^4.1.0"
  },
  "build": {
    "appId": "com.atom.browser.electron",
    "productName": "Atom Browser",
    "win": {
      "target": "nsis",
      "icon": "ico.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Atom"
    },
    "files": [
      "src/**/*",
      "package.json",
      "ico.png"
    ]
  }
}